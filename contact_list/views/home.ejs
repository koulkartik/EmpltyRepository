<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
       <!-- our css sholud be below all other style so that we can override it -->
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            My Contact List</h1>
        <div id="contact-list-container">
            <ul>
                <% for (let i of contact_list) { %>
                <li class="contact">
                    <div class="details">
                    <p><%= i.name %></p>
                    <p ><%= i.phone %></p>
                    </div>

                 <div class="delete-button">
                    <!-- <a href="/delete-contact/?phone=<%= i.phone %>"> -->
                        <a href="/delete-contact/?id=<%= i._id %>">
                       <i class="fas fa-window-close"></i>

                    </a>

                 </div>

                </li>
            <% } %>
            </ul>
        </div>

        <form id="new-contact-form" action="/create-contact" method="POST">
             <input type="text" name="name" placeholder="Enter Name" required>
             <input type="number" name="phone" placeholder="Enter Phone">
 
             <button type="Submit">Add</button>
            </form>

            <script type="text/javascript" src="/js/home.js">

            </script>
    </body>
</html>